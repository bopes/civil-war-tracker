<%= provide(:title, @battle.name) %>
<h1><%= @battle.name %></h1>

<% if @battle.end_date %>
  <h4><%= print_dates(@battle) %></h4>
<% else %>
  <h4><%= @battle.begin_date.to_formatted_s(:long) %></h4>
<% end %>

<div class='row'>
  <div class="col-md-6">
    <h3><%= "Victor: #{@battle.victor.name}" %></h3>

    <h4><%= "Outcome: #{@battle.conclusion}" %></h4>

    <p><%= @battle.description %></p>
  </div>

  <div class='col-md-6'>
    <h3>Location</h3>
    <%= render partial: 'layouts/map', locals: { locations: @battle.location_coordinates } %>
  </div>

</div>
