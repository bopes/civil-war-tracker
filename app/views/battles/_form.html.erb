<%= form_for(@battle) do |f| %>

  <div class='row center'>
      <%= f.text_field :name, class: 'form-control name-input', placeholder: 'Enter Name Here...' %>
  </div>

  <div class='col-md-6'>
    <h3>Dates</h3>
    <div class='center content-container'>
      <%= f.date_field :begin_date, class: 'form-control date-input', placeholder: 'Begin Date' %>
      to
      <%= f.date_field :end_date, class: 'form-control date-input', placeholder: 'End Date' %>
    </div>

    <h3>Combatants</h3>
    <div class='row'>
      <% @sides.each do |side| %>
        <div class='col-xs-6'>
          <div class='content-container checklist-normal'>
            <h4><%= side.name %></h4>
            <% side.armies.each do |army| %>
              <label>
                <%= check_box_tag :armies, army.id, @battle.armies.include?(army), name: 'battle[armies][]' %>
                <%= army.name %>
              </label><br>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class='col-md-6'>
    <h3>Location</h3>
    <div class='content-container'>
      <%= f.collection_select :location_id, @locations, :id, :name, {prompt: "Select location..."}, {class: 'form-control'} %>
    </div>

    <h3>Victor</h3>
    <div class='center victor-selection'>
      <%= f.collection_radio_buttons :victor_id, @sides, :id, :name %>
    </div>

    <h3>Campaign</h3>
    <div class='content-container'>
      <%= f.collection_select :campaign_id, @campaigns, :id, :name, {prompt: "Select campaign...",}, {class: 'form-control'} %>
    </div>

    <h3>Conclusion</h3>
    <div class='content-container'>
      <%= f.select :conclusion, options_for_select(["Defeat","Draw","Retreat","Surrender"]), {prompt: "Selection battle conclusion...."}, {class: 'form-control'} %>
    </div>

    <h3>Description</h3>
    <div class='content-container'>
      <%= f.text_area :description, class: 'form-control desc-input' %>
    </div>

  </div>

  <div class='row center'>
    <%= f.submit yield(:button_text), class:'btn btn-primary' %>
  </div>

<% end %>