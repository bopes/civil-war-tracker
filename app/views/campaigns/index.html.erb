<%= provide(:title, "Campaigns") %>

<h1>Campaigns</h1>
<div class='row'>
  <% @sides.each do |side| %>
    <div class='col-md-6'>
      <h3><%= side.name %></h3>
      <div class='list-group'>
        <% side.campaigns.each do |event| %>

          <a href=<%= "/#{plural(event)}/#{event.id}" %> class='list-group-item'>
            <%= event.name %>
            <% if [Battle, Event, Campaign].include?(event.class) %>
              <br><span class='inline-dates'><%= print_dates(event) %></span>
            <% end %>
          </a>

        <% end %>
      </div>
    </div>
  <% end %>
</div>


<div class='row center button-actions'>
  <%= link_to "Add Campaign", new_campaign_path, class: 'btn btn-primary' %>
</div>
