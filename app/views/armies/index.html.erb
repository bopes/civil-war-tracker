<%= provide(:title, "Armies") %>

<h1>Armies</h1>
<div class='row'>
  <% @sides.each do |side| %>
    <div class='col-md-6'>
      <h3><%= side.name %></h3>
      <section class='list-container'>
        <%= render partial: 'layouts/list', locals: { list: side.armies } %>
      </section>
    </div>
  <% end %>
</div>

<div class='row center button-actions'>
  <%= link_to "Add Army", new_army_path, class: 'btn btn-primary' %>
</div>