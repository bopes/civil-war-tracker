<%= provide(:title, @location.name) %>

<h1><%= @location.name %></h1>

<div class='row'>
  <div class='col-md-6'>
    <h3>Events</h3>
    <div class='content-container'>
      <%= render partial: 'layouts/list', locals: { list: @location.all_events } %>
    </div>
  </div>

  <div class='col-md-6'>
    <h3>Location</h3>
    <%= render partial: 'layouts/map', locals: { locations: [@location.coordinates] } %>
  </div>
</div>