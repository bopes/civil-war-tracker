<%= form_for(@rank) do |f| %>

  <div class='row'>
    <h3>Player</h3>
    <div class='content-container'>
      <%= f.grouped_collection_select :player_id, @sides, :players, :name, :id, :name, {prompt: "Select Player..."}, {class: 'form-control'}%>
    </div>
  </div>

  <div class='row'>
    <div class='col-xs-4'>
      <%= render partial: 'form-components/army', locals: { f: f } %>
    </div>

    <div class='col-xs-4'>
      <h3>Rank</h3>
      <div class='content-container'>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Rank..." %>
      </div>
    </div>

    <div class='col-xs-4'>
      <%= render partial: 'form-components/dates', locals: { f: f } %>
    </div>
  </div>

  <div class='row center'>
    <%= f.submit yield(:button_text), class:'btn btn-primary' %>
    <%= link_to "Remove Rank", @rank, method: :delete, data: { confirm: "Are you sure you want to delete this rank?" }, class:'btn btn-danger' if @rank.id %>
  </div>

<% end %>