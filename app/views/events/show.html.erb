<%= provide(:title, @event.name) %>
<h1><%= @event.name %></h1>

<h5><%= link_to @event.location.name, @event.location %></h5>
<h5><%= print_dates(@event) %></h5>

<div class='row'>
  <div class="col-md-6">
    <div id='description'>
      <h3>Campaign</h3>
      <div class='content-container'>
        <%= @event.campaign ? link_to(@event.campaign.name, @event.campaign) : "None" %>
      </div>
    </div>

    <div id='description'>
      <h3>Description</h3>
      <div class='content-container'>
        <div class='paragraphs'><%= @event.description %></div>
      </div>
    </div>
  </div>

  <div class='col-md-6'>
    <h3>Location</h3>
    <div class='content-container'>
      <%= render partial: 'layouts/map', locals: { locations: @event.location_coordinates } %>
    </div>
  </div>

</div>

<div class='row button-actions'>
  <%= link_to "Edit", edit_event_path, class:'btn btn-default' %>
  <%= link_to "Delete", @event, method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, class:'btn btn-danger' %>
</div>