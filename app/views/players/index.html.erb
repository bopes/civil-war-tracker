<%= provide(:title, "Players") %>

<h1>Key Players</h1>
<div class='row'>
  <% @sides.each do |side| %>
    <div class='col-md-6'>
      <h3><%= side.name %></h3>
      <div class='content-container'>
        <%= render partial: 'layouts/list', locals: { list: side.players } %>
      </div>
    </div>
  <% end %>
</div>

<div class='row center button-actions'>
  <%= link_to "Add Player", new_player_path, class: 'btn btn-primary' %>
</div>